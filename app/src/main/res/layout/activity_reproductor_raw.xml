<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReproductorRawActivity">

    <TextView
        android:id="@+id/texto1_raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Reproductor RAW"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="116dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imabotonPause_raw"
            android:layout_width="195dp"
            android:layout_height="116dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/pausa" />

        <ImageButton
            android:id="@+id/imabotonPlay_raw"
            android:layout_width="196dp"
            android:layout_height="116dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/play" />

        <ImageButton
            android:id="@+id/imabotonStop_raw"
            android:layout_width="wrap_content"
            android:layout_height="116dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/stop" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>